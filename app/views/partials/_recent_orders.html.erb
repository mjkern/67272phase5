
<div class="card">
  <div class="card-content">
    <span class="card-title">Recent Orders</span>
    <ul class="collapsible">
      <% first = true %>
      <% for order in get_recent_orders %>
        <li<%= first ? " class=active" : '' %>>
          <div class="collapsible-header"><%= format_date order.date %></div>
          <div class="collapsible-body">
            <ul class="collection">
              <% for item in order.items %>
                <li class="collection-item">
                  <div><%= item.name %>
                    <a href="<%= add_cart_path(item) %>" class="secondary-content btn-floating btn-small waves-effect waves-light red"><i class="material-icons">add_shopping_cart</i></a>
                  </div>
                </li>
              <% end %>
						</ul>
          </div>
        </li>
        <% first = false %>
      <% end %>
    </ul>
  </div>
</div>
