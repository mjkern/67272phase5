<div class="row">
  <div class="col s8">
    <div class="row">
      <div class="col s12">
        <%= render partial: "#{primary}", locals: locals %>
      </div>
    </div>
    <% if (defined?(secondary)) %>
      <div class="row">
        <div class="col s12">
          <%= render partial: "#{secondary}", locals: locals %>
        </div>
      </div>
    <% end %>
  </div>
  <div class="col s4">
    <%= render partial: "#{sidebar}", locals: locals %>
  </div>
</div>
