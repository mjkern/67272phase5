
<% items ||= @similar_items %>
  <div class="card">
    <div class="card-content">
      <span class="card-title">Similar Items</span>
      <% if !items or items.count == 0 %>
        <p>No similar items to show</p>
      <% else %>
      <ul class="collection">
        <% for item in items %>
                  <li class="collection-item">
                    <div><%= link_to item.name, item_path(item) %>
                    <% if current_user && current_user.role?(:customer) %>
                      <a href="<%= add_cart_path(item) %>" class="secondary-content btn-floating btn-small waves-effect waves-light red"><i class="material-icons">add_shopping_cart</i></a>
                    <% end %>
                    </div>
                  </li>
                <% end %>
              </ul>
      <% end %>
    </div>
  </div>
