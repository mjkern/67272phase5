<h5>Recent Sales</h5>
<div class="row">
  <div class="col s12">
    <ul class="tabs chart-tabs">
      <li class="tab col s3"><a href="#sales7" class="selected">7 Days</a></li>
      <li class="tab col s3"><a href="#sales30">30 Days</a></li>
      <li class="tab col s3"><a href="#sales90">90 Days</a></li>
    </ul>
  </div>
  <div id="sales7" class="col s12">
    <%= line_chart Order.where("date > ?", 8.days.ago).group(:date).count, ytitle: "Total Orders", xtitle: "Day" %>
  </div>
  <div id="sales30" class="col s12">
    <%= line_chart Order.where("date > ?", 30.days.ago).group(:date).count, ytitle: "Total Orders", xtitle: "Day" %>
  </div>
  <div id="sales90" class="col s12">
    <%= line_chart Order.where("date > ?", 90.days.ago).group(:date).count, ytitle: "Total Orders", xtitle: "Day" %>
  </div>
</div>
