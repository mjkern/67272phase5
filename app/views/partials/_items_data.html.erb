<div class="card">
  <div class="card-content">
    <span class="card-title">Top Items</span>
    <p>Hover for details</p>
    <div class="row">
      <div class="col s12">
        <ul class="tabs chart-tabs">
          <li class="tab col s3"><a href="#items7" class="selected">7 Days</a></li>
          <li class="tab col s3"><a href="#items30">30 Days</a></li>
          <li class="tab col s3"><a href="#items90">90 Days</a></li>
        </ul>
      </div>
      <div id="items7" class="col s12">
        <%= column_chart get_top_items(7),
          legend: false, ytitle: "Total Quantity Sold", xtitle: "Item" %>
      </div>
      <div id="items30" class="col s12">
        <%= column_chart get_top_items(30),
          legend: false, ytitle: "Total Quantity Sold", xtitle: "Item" %>
      </div>
      <div id="items90" class="col s12">
        <%= column_chart get_top_items(90),
          legend: false, ytitle: "Total Quantity Sold", xtitle: "Item" %>
      </div>
    </div>
  </div>
</div>
