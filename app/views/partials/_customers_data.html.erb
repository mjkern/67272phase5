<div class="card">
  <div class="card-content">
    <span class="card-title">Best Customers</span>
    <div class="row">
      <div class="col s12">
        <ul class="tabs chart-tabs">
          <li class="tab col s3"><a href="#customers7" class="selected">7 Days</a></li>
          <li class="tab col s3"><a href="#customers30">30 Days</a></li>
          <li class="tab col s3"><a href="#customers90">90 Days</a></li>
        </ul>
      </div>
      <div id="customers7" class="col s12">
        <%= column_chart get_top_customers(7),
          legend: false, ytitle: "Total Spending ($)", xtitle: "Customer" %>
      </div>
      <div id="customers30" class="col s12">
        <%= column_chart get_top_customers(30),
          legend: false, ytitle: "Total Spending ($)", xtitle: "Customer" %>
      </div>
      <div id="customers90" class="col s12">
        <%= column_chart get_top_customers(90),
          legend: false, ytitle: "Total Spending ($)", xtitle: "Customer" %>
      </div>
    </div>
  </div>
</div>
