<div class="card">
  <div class="card-content">
    <span class="card-title">Addresses</span>
    <div class="row">
      <div class="col s6">
        <%= render partial: 'partials/address_details_card', locals: {address: customer.billing_address, highlight: true} %>
      </div>
      <div class="col s6">
        <% for address in (customer.addresses.by_recipient - [customer.billing_address]) %>
          <%= render partial: 'partials/address_details_card', locals: {address: address, highlight: false} %>
        <% end %>
      </div>
    </div>
  </div>
  <div class="card-action">
    <%= link_to 'Add Address', new_address_path %>
  </div>
</div>

