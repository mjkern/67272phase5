<div class="card">
  <div class="card-content">
    <span class="card-title">Addresses</span>
    <div class="row">
      <div class="col s4">
        <%= render partial: 'partials/address_details_card', locals: {address: customer.billing_address, highlight: true} %>
      </div>
      <div class="col s4">
        <% for address in customer.addresses %>
          <%= render partial: 'partials/address_details_card', locals: {address: address, highlight: false} %>
        <% end %>
      </div>
    </div>
  </div>
</div>

