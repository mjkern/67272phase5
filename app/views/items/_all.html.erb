<% items ||= Item.alphabetical %>
<% items = items.active + items.inactive %>
<div class="row">
  <% if items.count == 0 %>
    <h6>No items to show here</h6>
  <% else %>
    <% for item in items %>
      <div class="col s3 m2">
        <%= render partial: 'partials/item_preview', locals: { item: item } %>
      </div>
    <% end %>
  <% end %>
</div>
